{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "required": [
        "id",
        "owner",
        "private"
    ],
    "properties": {
        "id": {
            "type": "integer",
            "format": "int64"
        },
        "title": {
            "type": "string"
        },
        "ownerId": {
            "type": "string"
        },
        "private": {
            "type": "boolean",
            "default": true
        },
        "watchDate": {
            "type": "string",
            "format": "date"
        },
        "rating": {
            "type": "integer",
            "maximum": 10,
            "minimum": 0
        },
        "favorite": {
            "type": "boolean",
            "default": false
        }
    },
    "if": {
        "properties": {
            "private": {
                "const": true
            }
        }
    },
    "then": {
        "properties": {
            "favorite": {
                "type": "boolean",
                "default": false
            },
            "watchDate": {
                "type": "string",
                "format": "date"
            },
            "rating": {
                "type": "integer",
                "maximum": 10,
                "minimum": 0
            }
        }
    }
}