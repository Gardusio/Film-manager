{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "required": [
        "filmId",
        "reviewerId",
        "senderId"
    ],
    "properties": {
        "id": {
            "type": "integer",
            "format": "int64"
        },
        "filmId": {
            "type": "integer",
            "format": "int64"
        },
        "reviewerId": {
            "type": "integer",
            "format": "int64"
        },
        "senderId": {
            "type": "integer",
            "format": "int64"
        },
        "message": {
            "type": "string",
            "maxLength": 100
        },
        "issueDate": {
            "type": "integer",
            "format": "date"
        },
        "completed": {
            "type": "boolean"
        }
    }
}