{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "required": [
        "id",
        "email"
    ],
    "properties": {
        "films": {
            "type": "array",
            "items": {
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "title": {
                        "type": "string"
                    },
                    "ownerId": {
                        "type": "string"
                    }
                }
            }
        },
        "links": {
            "$ref": "../links.json"
        }
    }
}